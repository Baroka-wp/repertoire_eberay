generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repetiteur {
  id            Int      @id @default(autoincrement())
  nom           String
  prenom        String
  email         String?  // Le ? veut dire optionnel
  telephone     String
  ville         String
  departement   String   // Niamey, Dosso, etc.
  matieres      String   // Stock√© comme texte "Maths, PC"
  diplome       String
  anneeEntree   Int
  statut        String   @default("Actif") // Actif ou Suspendu
  createdAt     DateTime @default(now())
}